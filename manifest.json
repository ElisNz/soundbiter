{
  "manifest_version": 3,
  "name": "SoundBiter",
  "description": "Capture and download audio snippets from open browser tabs.",
  "version": "1.0.2",
  "icons": {
    "16": "icons/soundbiter_16.png",
    "48": "icons/soundbiter_48.png",
    "128": "icons/soundbiter_128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "tabCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/soundbiter_16.png",
      "48": "icons/soundbiter_48.png",
      "128": "icons/soundbiter_128.png"
    }
  },
  "background": {
    "service_worker": "popup/background.js"
  }
}
